{
    "name": "netgen/content-browser-ezplatform",
    "description": "Netgen Content Browser & eZ Platform integration",
    "license": "GPL-2.0-only",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://www.netgenlabs.com"
        }
    ],
    "require": {
        "netgen/content-browser": "~1.1.0",
        "ezsystems/ezpublish-kernel": "^7.5 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "symfony/phpunit-bridge": "^4.3",
        "symfony/var-dumper": "^3.4 || ^4.3",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-strict-rules": "^0.11",
        "phpstan/phpstan-phpunit": "^0.11",
        "vimeo/psalm": "^3.4",
        "matthiasnoback/symfony-dependency-injection-test": "^4.0",
        "netgen/tagsbundle": "^3.4 || ^4.0",
        "franzl/studio": "*"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --colors=always",
        "coverage": "@php -dzend_extension=xdebug.so vendor/bin/phpunit --coverage-html=coverage --colors=always",
        "phpstan": "@php vendor/bin/phpstan analyse -c phpstan.neon --level=7 --ansi lib bundle",
        "phpstan-tests": "@php vendor/bin/phpstan analyse -c phpstan.tests.neon --level=7 --ansi tests",
        "psalm": "@php vendor/bin/psalm -c psalm.xml --show-info=false"
    },
    "autoload": {
        "psr-4": {
            "Netgen\\ContentBrowser\\Ez\\": "lib/",
            "Netgen\\Bundle\\ContentBrowserEzPlatformBundle\\": "bundle/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netgen\\ContentBrowser\\Ez\\Tests\\": "tests/lib/",
            "Netgen\\Bundle\\ContentBrowserEzPlatformBundle\\Tests\\": "tests/bundle/",
            "Netgen\\ContentBrowser\\Tests\\": "vendor/netgen/content-browser/tests/lib/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    }
}
